<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hosp_sign_up">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="32" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/img"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hosp_sign_up"
        tools:replace="android:allowBackup">

        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDUkdwhKB4gHn06NmQnPwtl7Vui29QnpHw" />

        <activity
            android:name="com.example.hosp_sign_up.driver_map"
            android:exported="false"
            android:label="@string/title_activity_driver_map" />
        <activity
            android:name="com.example.hosp_sign_up.u_login"
            android:exported="false" />
        <activity
            android:name="com.example.hosp_sign_up.user_signup"
            android:exported="false" />
        <activity
            android:name="com.example.hosp_sign_up.driver_dash"
            android:exported="false" />
        <activity
            android:name="com.example.hosp_sign_up.d_login"
            android:exported="false" />
        <activity
            android:name="com.example.hosp_sign_up.driver_signup"
            android:exported="false" />
        <activity
            android:name="com.example.hosp_sign_up.picker"
            android:exported="false" />
        <activity
            android:name="com.example.hosp_sign_up.user_dash"
            android:exported="false" />
        <activity
            android:name="com.example.hosp_sign_up.mapipop"
            android:exported="false" />
        <activity
            android:name="com.example.hosp_sign_up.maps1"
            android:exported="false"
            android:label="@string/title_activity_maps1" />
        <activity
            android:name="com.example.hosp_sign_up.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hosp_sign_up.SignUpActivity"
            android:exported="true"
            android:label="@string/title_activity_signup"
            android:theme="@style/Theme.Hosp_sign_up.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hosp_sign_up.Login"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name="com.example.hosp_sign_up.hosp_dash"
            android:exported="true" />
    </application>

</manifest>